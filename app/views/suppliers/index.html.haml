
.row
  .span12
    = render 'layouts/partials/header', path: new_supplier_path
    = render 'layouts/partials/search', path: suppliers_path

    %table.table.table-hover.table-striped.table-condensed
      %thead
        %tr
          %th= Supplier.human_attribute_name(:name)
          %th= Supplier.human_attribute_name(:created_at)
          %th= t '.actions', :default => t("helpers.actions")
      %tbody
        - @suppliers.each do |supplier|
          %tr
            %td
              = link_to supplier.name, supplier_path(supplier)
            %td=l supplier.created_at.to_date
            %td
              = link_to t('.show', :default => t("helpers.links.show")),
                          supplier_path(supplier), :class => 'btn btn-mini btn-warning'
              = link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_supplier_path(supplier), :class => 'btn btn-mini btn-primary'
              = link_to t('.destroy', :default => t("helpers.links.destroy")),
                          supplier_path(supplier),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                          :class => 'btn btn-mini btn-danger'

    = pagination @suppliers

