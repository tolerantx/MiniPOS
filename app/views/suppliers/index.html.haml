
.row
  .span9
    - model_class = Supplier
    .page-header
      %h1= page_header model_class

    = form_tag suppliers_path, :method => :get, :id => 'suppliers-search-form', :class => 'well form-inline' do
      %label
        %strong= t("labels.search")
      = text_field_tag 'search[terms]', @search[:terms], :placeholder => t("placeholder.search")
      = submit_tag 'Buscar', :id => 'suppliers-form-button', :class => 'btn btn-small btn-primary'
      = link_to t('labels.clear'), suppliers_path, :class => 'btn btn-small'

    %table.table.table-hover.table-striped.table-condensed
      %thead
        %tr
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:created_at)
          %th= t '.actions', :default => t("helpers.actions")
      %tbody
        - @suppliers.each do |supplier|
          %tr
            %td
              = link_to supplier.name, supplier_path(supplier)
            %td=l supplier.created_at.to_date
            %td
              = link_to t('.show', :default => t("helpers.links.show")),
                          supplier_path(supplier), :class => 'btn btn-mini btn-warning'
              = link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_supplier_path(supplier), :class => 'btn btn-mini btn-primary'
              = link_to t('.destroy', :default => t("helpers.links.destroy")),
                          supplier_path(supplier),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                          :class => 'btn btn-mini btn-danger'

    = pagination @suppliers

  .span3
    .text-right
      = link_to t('.new', :default => t("helpers.links.new")), new_supplier_path, :class => 'btn btn-primary'

    .block
      %h5= t("labels.general_information")
      %p
        %strong= t("labels.total_records")
        = @suppliers.count

