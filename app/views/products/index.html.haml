.row
  .span9
    - model_class = Product
    .page-hader
      %h1= t('.title', :default => model_class.model_name.human.pluralize.titleize)

      = form_tag products_path, :method => :get, :id => 'products-search-form', :class => 'well form-inline' do
        %label
          %strong= t("labels.search")
        = text_field_tag 'search[terms]', @search[:terms], :placeholder => t("placeholder.search")
        = submit_tag 'Buscar', :id => 'products-form-button', :class => 'btn btn-small btn-primary'
        = link_to t('labels.clear'), products_path, :class => 'btn btn-small'

    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:code)
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:price)
          %th= model_class.human_attribute_name(:created_at)
          %th= t '.actions', :default => t("helpers.actions")
      %tbody
        - @products.each do |product|
          %tr
            %td
              = link_to product.code, product_path(product)
            %td= product.name
            %td= product.price
            %td=l product.created_at, :format => :short
            %td
              = link_to t('.show', :default => t("helpers.links.show")),
                          product_path(product), :class => 'btn btn-mini btn-warning'
              = link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_product_path(product), :class => 'btn btn-mini btn-primary'
              = link_to t('.destroy', :default => t("helpers.links.destroy")),
                          product_path(product),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger'

    = pagination @products

  .span3
    .text-right
      = link_to t('.new', :default => t("helpers.links.new")), new_product_path, :class => 'btn btn-primary'

    .side-bar
      %h5= t("labels.general_information")
      %p
        %strong= t("labels.total_records")
        = @products.count