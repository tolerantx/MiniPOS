.row
  .span9
    - model_class = Account
    .page-hader
      %h1= page_header model_class

    = form_tag accounts_path, :method => :get, :id => 'accounts-search-form', :class => 'well form-inline' do
      %label
        %strong= t("labels.search")
      = text_field_tag 'search[terms]', @search[:terms], :placeholder => t("placeholder.search")
      = submit_tag 'Buscar', :id => 'accounts-form-button', :class => 'btn btn-small btn-primary'
      = link_to t('labels.clear'), accounts_path, :class => 'btn btn-small'

    %table.table.table-hover.table-striped.table-condensed
      %thead
        %tr
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:created_at)
          %th= t '.actions', :default => t("helpers.actions")
      %tbody
        - @accounts.each do |account|
          %tr
            %td= link_to account.name, account_path(account)
            %td=l account.created_at.to_date
            %td
              = link_to t('.show', :default => t("helpers.links.show")),
                          account_path(account), :class => 'btn btn-mini btn-warning'
              = link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_account_path(account), :class => 'btn btn-mini btn-primary'
              = link_to t('.destroy', :default => t("helpers.links.destroy")),
                          account_path(account),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger'

    = pagination @accounts

  .span3
    .text-right
      = link_to t('.new', :default => t("helpers.links.new")), new_account_path, :class => 'btn btn-primary'

    .block
      %h5= t("labels.general_information")
      %p
        %strong= t("labels.total_records")
        = @accounts.count
