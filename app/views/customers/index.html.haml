
.row
  .span9
    - model_class = Customer
    .page-header
      %h1= t('.title', :default => model_class.model_name.human.pluralize.titleize)

    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:full_name)
          %th= model_class.human_attribute_name(:created_at)
          %th= t '.actions', :default => t("helpers.actions")
      %tbody
        - @customers.each do |customer|
          %tr
            %td
              = link_to customer.full_name, customer_path(customer)
            %td=l customer.created_at, :format => :short
            %td
              = link_to t('.show', :default => t("helpers.links.show")),
                          customer_path(customer), :class => 'btn btn-mini btn-warning'
              = link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_customer_path(customer), :class => 'btn btn-mini btn-primary'
              = link_to t('.destroy', :default => t("helpers.links.destroy")),
                          customer_path(customer),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger'

  .span3
    .text-right
      = link_to t('.new', :default => t("helpers.links.new")), new_customer_path, :class => 'btn btn-primary'

    .side-bar
      %h5= t("labels.general_information")
      %p
        %strong= t("labels.total_records")
        = @customers.count

